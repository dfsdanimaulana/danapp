<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include('layouts/cdn') %>

    <link rel="stylesheet" href="/css/signup.css" type="text/css" media="all" />

    <script src="/js/signup.js" type="text/javascript" charset="utf-8" defer></script>
    <title>DanApp | Signup Page</title>
</head>
<body>
    <!-- start  -->
    <div class="container text-center p-3">
        <h1 class="h1 mb-5">Create Account</h1>
        <form class="p-3" action="/signup" method="post">
            <div class="form-floating shadow-sm mb-3">
                <input
                id="username"
                name="username"
                type="text"
                placeholder="Username"
                minlength="3"
                maxlength="10"
                required
                autofocus
                autocomplete="off"
                class="form-control">
                <label for="username">Username</label>
            </div>
            <div class="form-floating shadow-sm mb-3">
                <input
                class="form-control"
                id="name"
                name="name"
                type="text"
                placeholder="Name"
                minlength="3"
                maxlength="15"
                required
                autofocus
                autocomplete="off">
                <label for="name">Name</label>
            </div>
            <div class="form-floating shadow-sm mb-3">
                <input
                class="form-control"
                id="email"
                name="email"
                type="email"
                placeholder="Email"
                required
                autofocus
                autocomplete="off"
                >
                <label for="email">Email address</label>
            </div>
            <div class="form-floating shadow-sm mb-3">
                <input
                class="form-control"
                id="password"
                name="password"
                type="password"
                placeholder="Password"
                minlength="6"
                maxlength="20"
                required
                autofocus>
                <label for="password">Password</label>
            </div>
            <div class="form-floating shadow-sm mb-3">
                <input
                class="form-control"
                id="password_check"
                name="password_check"
                type="password"
                placeholder="Repeat your password"
                minlength="6"
                maxlength="20"
                required
                autofocus>
                <label for="password">Repeat your password</label>
            </div>
            <button type="submit" class="btn btn-primary w-100 shadow-sm mb-5">Submit</button>
        </form>
        <div class="footer">
            Already have an Account? <a href="/login">Login here</a>
        </div>
    </div>
    <!-- end  -->
</body>
</html>